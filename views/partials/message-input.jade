.ui.form.comment(on-tap="launch-join-modal")
  .avatar
    img(src="/img/image.png")
  .content
    .text
      .ui.fluid.disabled.action.input
        input.inline(type="text", placeholder="Start typing", disabled)
        .ui.disabled.right.labeled.icon.button
          i.share.icon
          | send

script.
  window.addEventListener('load', function() {
    $('.tooltipped.comment.form').popup({
      hoverable: true,
      delay: {
        hide: 250
      }
    });
    
    $(document).on('click', '*[on-tap=launch-join-modal]', function(e) {
      e.preventDefault();
      
      $('#join-modal').modal('show');
      
      return false;
    });
    
  });
