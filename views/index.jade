extends layouts/default

block scripts
  script.
    hljs.initHighlightingOnLoad();

block masthead
  .ui.center.aligned.inverted.segment
    h1.ui.inverted.header #{config.service.pitch}
    h2.ui.inverted.header #{config.service.mission}

    a.ui.huge.primary.right.labeled.icon.button(href="/people", style="margin-top: 2.5em;")
      | Meet the Community
      i.right.chevron.icon
      
    //-h4.ui.inverted.header No coding experience necessary.

block content
  //-maki-promo-segment

  .ui.vertical.stripe.segment
    .ui.text.container
      h3.ui.horizontal.header.divider Semantic Interface Design
      p Build applications with the <a href="/snippets/components">Interface Design Language</a> and enjoy harmony.
      
      code.header generic-chat.idl:
      .ui.segment
        pre.jade.numbered
          code.
            extends layouts/default

            block content
              maki-chat-view(src="/rooms/lounge")
                
      img.ui.centered.aligned.image(src="/img/image.png")

      h3.ui.horizontal.header.divider Component Architecture
      p Components can be built and customized to control the user experience of your application across multiple platforms.
      
      
      .ui.info.icon.message.text.container
        i.icon.info
        .content
          h4.center.aligned.icon.header Heads Up!
          p We haven't <a href="/snippets/language">formalized a language</a> yet.  These are just ideas.

    .ui.two.column.centered.stackable.grid.container(style="margin-top: 2em; margin-bottom: 2em;")
      .six.wide.column
        // This simple component binds a user input
        // (say, a text area) to a channel, a routable
        // path in Fabric.
        //  
        // When the user has completed providing input,
        // the type defitions for the resource will 
        // resume their compute pipeline.
        code.header maki-chat-input.com:
        .ui.segment
          pre.jade.numbered
            code.
              component#maki-chat-input
                template
                  input(src="/messages")
      .six.wide.column
        // Now, we can bind a `list` call to a
        // known channel, with its API defined by
        // the resource definition.
        // 
        // Our final step is to call `text`, which outputs
        // the next step.  Called in its own context.
        code.header maki-chat-messages.com:
        .ui.segment
          pre.jade.numbered
            code.
              component#maki-chat-messages
                template
                  list(src="/messages")
                    text message

    .ui.two.column.centered.stackable.grid.container(style="margin-top: 2em; margin-bottom: 2em;")
      .six.wide.column
        code.header maki-chat-view.com:
        .ui.segment
          pre.jade.numbered
            code.
              component#maki-chat-view
                template
                  maki-chat-messages
                  maki-chat-input

    .ui.three.column.centered.stackable.grid.container(style="margin-top: 2em; margin-bottom: 2em;")
      .three.wide.column
        h4 Mobile
        img.ui.centered.aligned.image(src="/img/image.png")
      .three.wide.column
        h4 Desktop
        img.ui.centered.aligned.image(src="/img/image.png")
      .three.wide.column
        h4 Web
        img.ui.centered.aligned.image(src="/img/image.png")

      
  .ui.vertical.stripe.quote.segment
    .ui.equal.width.stackable.internally.celled.grid
      .center.aligned.row
        .column
          h3 "This feels like the invention of the transistor."
          p Will Ricketts, SailsJS Contributor
        .column
          h3 We're building something new.
          a.ui.huge.primary.right.labeled.icon.button(href="/invitations") Come join us.
            i.icon.right.chevron

//-block page
  .pusher
    .ui.inverted.vertical.masthead.center.aligned.segment
      .ui.container
        .ui.large.secondary.inverted.pointing.menu
          a.toc.item
            i.sidebar.icon
          .item
            img.tooltipped(src="/img/maki-icon.png", title="The hand-rolled, carefully crafted goodness that is Maki.", data-variation="inverted", style="max-height: 2em; max-width: 2em; margin-bottom: -0.75em; margin-right: -0.5em;")
          a.item.active(href="/")
            | Maki
          a.item(href="/examples")
            | Examples
          a.item(href="/docs")
            | Docs
          a.item(href="/plugins")
            | Plugins
          a.item(href="/people")
            | Community
          .right.item
            script(async, defer, src="https://community.ericmartindale.com/slackin.js?large")
            a.ui.inverted.button(href="https://github.com/martindale/maki")
              i.icon.alternate.github
              | Developers
              i.icon.right.chevron
      .ui.text.container
        h1.ui.inverted.header
          | Build more, code less.
        h2
          | #{config.service.name} is !{config.service.mission}

        pre(style="font-size: 1.2em; margin-top: 2em;")
          code.nohighlight.
            npm install martindale/maki
          
        a.ui.huge.primary.button(href="/docs")
          | Create Your First Project
          i.right.chevron.icon
