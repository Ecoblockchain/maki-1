        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li ng-class="{ active: isActive('/')}"><a href="/" title="Maki Homepage"><i class="glyphicon glyphicon-home"></i> Home</a></li>
            <li ng-class="{ active: isActive('/examples')}"><a href="/examples" title="Projects using Maki"><i class="glyphicon glyphicon-leaf"></i> Examples</a></li>
            <li ng-class="{ active: isActive('/people')}"><a href="/people" title="People on this Maki, an example resource."><i class="glyphicon glyphicon-user"></i> People</a></li>
